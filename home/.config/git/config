[push]
	default = simple
	autoSetupRemote = true

[user]
	# Personal git config should be set in ~/.gitconfig.local
	# Example:
	# name = Your Name
	# email = your.email@example.com

[credential]
	helper = osxkeychain

[pull]
	rebase = true

[rerere]
	enabled = true

[advice]
	detachedHead = false

[init]
	defaultBranch = main

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true
	line-numbers = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
