# Ghostty Terminal Configuration
# https://ghostty.org/config

# Theme
theme = rose-pine

# Font
font-family = Fira Code
font-size = 14

# Window
window-width = 120
window-height = 40
window-padding-x = 8
window-padding-y = 8

# Cursor
cursor-style = block
cursor-blink = false

# Shell
shell-integration = detect

# Keybindings
key = ctrl+shift+c=copy_to_clipboard
